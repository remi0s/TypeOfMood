<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdbdbdb"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="223dp"
        android:layout_height="287dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/typeofmood_logo" />


    <LinearLayout
        android:id="@+id/chooseday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="Today"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="This week"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="This month"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutMood"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_below="@+id/chooseday"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="4">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_home_happy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_happy" />

            <ImageView
                android:id="@+id/imageView_home_happy"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/home_happy" />

            <TextView
                android:id="@+id/textView_stats_happy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_home_neutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_neutral" />

            <ImageView
                android:id="@+id/imageView_home_neutral"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/home_neutral" />

            <TextView
                android:id="@+id/textView_stats_neutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_home_sad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_sad" />

            <ImageView
                android:id="@+id/imageView_home_sad"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/home_sad" />

            <TextView
                android:id="@+id/textView_stats_sad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_home_Stressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_stressed" />

            <ImageView
                android:id="@+id/imageView_home_sad"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/home_stressed" />

            <TextView
                android:id="@+id/textView_stats_Stressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPhysical"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_below="@+id/layoutMood"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="4">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_home_relaxed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_relaxation" />

            <ImageView
                android:id="@+id/imageView_home_relaxed"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_relaxed" />

            <TextView
                android:id="@+id/textView_stats_relaxed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_home_pneutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_neutral" />

            <ImageView
                android:id="@+id/imageView_home_pneutral"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/home_neutral" />

            <TextView
                android:id="@+id/textView_stats_pneutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_home_tired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_tiredness" />

            <ImageView
                android:id="@+id/imageView_home_tired"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_tired" />

            <TextView
                android:id="@+id/textView_stats_tired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_home_sick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_sickness" />

            <ImageView
                android:id="@+id/imageView_home_sick"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_sick" />

            <TextView
                android:id="@+id/textView_stats_sick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>